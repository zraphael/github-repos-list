{
  "compilerOptions": {                        
    "lib": ["dom", "dom.iterable", "esnext"],                                        
    "moduleResolution": "node",                       
    "resolveJsonModule": true,                        
    "allowJs": true,    
    "jsx": "react-jsx",                              
    "noEmit": true,                                   
    "isolatedModules": true,                          
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                 
  },
  "include": ["src"]
}
